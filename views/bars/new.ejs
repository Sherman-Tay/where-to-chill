<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Upload New Listing</h1>
        <div class="col-6 offset-3">
            <form action="/bars" method="POST" novalidate class="validatedForm" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class ="form-label">Name of Bar</label>
                    <input type="text" class="form-control" name="bars[name]" id="name" required>
                </div>
                <div class="mb-3">
                    <label for="location" class ="form-label">Displayed Address</label>
                    <input type="text" class="form-control" name="bars[location][display_address]" id="location" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <div class="mb-3">
                    <label for="zip_code" class ="form-label">Postal Code</label>
                    <input type="text" class="form-control" name="bars[location.zip_code]" id="zip_code" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <input type="file" name="image" multiple>
                  <!-- <div class="mb-3 mt-2">
                    <label for="image_url" class ="form-label">Image URL</label>
                    <input type="text" class="form-control" name="bars[image_url]" id="image_url">
                </div> -->
                <div class="mb-3">
                    <label for="url" class ="form-label">Link to Site or Menu if available</label>
                    <input type="text" class="form-control" name="bars[url]" id="url" >
                </div>
                <div>
                    <label for="price" class ="form-label">Price Range </label>
                
                <div class="input-group">
                    <span class="input-group-text" id="addon-wrapping">$</span>
                    <input type="text" class="form-control" name="bars[price]" id="price" placeholder="from $ to $$$$" aria-describedby="addon-wrapping" required>
                </div>
            </div>
                <button class="btn btn-primary mt-5">Add New Bar</button>
                </form>
            <p>
                <a href="/bars">Back to Bars</a>
            </p>
        </div>
    </div>


