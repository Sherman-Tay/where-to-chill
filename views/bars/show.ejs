<% layout('layouts/boilerplate')%>
<!-- <link rel="stylesheet" href="/css/stars.css"> -->

<div class="row">
  <div class="col-6">
    <div class="card">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% bar.images.forEach((img,i)=>{ %>
          <div class="carousel-item <%= i===0 ? 'active' : ''%>">
            <img class="d-block w-100" src="<%= img.url %> " alt="" />
          </div>
          <% }) %>
        </div>
        <% if(bar.images.length >1) {%> 
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          <% } %> 
      </div>
      <div class="card-body">
        <h1><%=bar.name%></h1>
        <h5 class="card-title"><%=bar.location.display_address%></h5>
        <p class="card-text text-muted">
          <%=bar.location.country%>,<%=bar.location.city%>
        </p>
        <p class="card-text text-muted">
          Coordinates:
          (<%=bar.coordinates.latitude%>,<%=bar.coordinates.longitude%>)
        </p>

        <p class="card-text text-muted">
          <%if(bar.is_closed === true){%> Bar is Closed for good. <%} else{%>
          Bar is Open for Business! <%}%>
        </p>

        <p class="card-text text-muted">
          url: <a href="<%=bar.url%>">Link to Site</a>
        </p>

        <div class="card-body">
          <a class="btn btn-primary" href="/bars/<%=bar._id%>/edit"
            >Edit Information</a
          >
          <a class="btn btn-warning" href="/bars/<%=bar._id%>/add"
            >Add Image</a
          >

          <a class="btn btn-secondary" href="/bars">Back to All Bars</a>
          <% if(currentUser && bar.author.equals(currentUser)){%>
          <form
            class="d-inline"
            action="/bars/<%=bar._id%>?_method=delete"
            method="POST"
          >
            <button class="btn btn-danger">Delete Listing</button>
          </form>
          <%} else{%>
          <a class="btn btn-dark text-muted" href="#">Log in Admin to Delete</a>
          <%}%>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6">
    <h2 class="mt-3 mb-3">Leave a Review</h2>
    <form
      action="/bars/<%=bar._id%>/review"
      method="POST"
      novalidate
      class="validatedForm"
    >
      <div class="">
        <label class="form-label" for="rating">Rating</label>
        <fieldset class="starability-heart">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="0"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="review">Review Description</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="review"
          cols="30"
          rows="5"
          required
        ></textarea>
        <div class="valid-feedback">Looks Good</div>
        <button class="btn btn-success mt-3">Add Review</button>
      </div>
    </form>
    <div class="mb-3">
      <% for(let review of bar.reviews){%>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Rating: <%=review.rating%> Stars</h5>
          <p class="starability-result" data-rating="<%=review.rating%>"></p>

          <h6 class="card-subtitle mb-2 text-muted">
            By <%=review.author.username%>
          </h6>
          <p><%=review.body%></p>

          <form
            action="/bars/<%=bar._id%>/review/<%=review._id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger btn-sm">Delete Review</button>
          </form>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</div>

<footer></footer>
