<%layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-md-6 offset-md-3 ">
    <div class="card shadow">
      <img src="https://images.unsplash.com/photo-1532634726-8b9fb99845fd?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="..." class="card-img-top">
      <div class="card-body">
        <h5 class="card-title">Register an Account with Us</h5>
        <form action="/register" method="POST" novalidate class="validatedForm">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              name="username"
              id="username"
              required
            />
            <div class="valid-feedback">Looks Good!</div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">E-mail Address</label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              required
            />
            <div class="valid-feedback">Looks Good!</div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
              required
            />
            <div class="valid-feedback">Looks Good!</div>
          </div>
          <button class="btn btn-success">Register</button>
          </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
