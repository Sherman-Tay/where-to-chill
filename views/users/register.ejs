<%layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Register an Account with Us</h1>
    <div class="col-8 offset-2">
<form action="/register" method="POST" novalidate class="validatedForm">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input
      type="text"
      class="form-control"
      name="username"
      id="username"
      required
    />
    <div class="valid-feedback">Looks Good!</div>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">E-mail Address</label>
    <input
      type="email"
      class="form-control"
      name="email"
      id="email"
      required
    />
    <div class="valid-feedback">Looks Good!</div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input
      type="password"
      class="form-control"
      name="password"
      id="password"
      required
    />
    <div class="valid-feedback">Looks Good!</div>
  </div>
  <button class="btn btn-success">Register</button>
  </div>
  </div>
</form>
